<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs")%>
    <link rel="stylesheet" href="../formStlye.css">
</head>
<body> 
    <%- include("./partials/nav.ejs")%>    
     <main>
     <h1>Reegistrar Usuario</h1>

     <form action="/users/register" method="post">
        <div class="input-container">
            <label for="name">Nombre</label>
            <input type="text"  placeholder="Nombre" autocomplete="Nombre" name="name" >
        </div>
        <div class="input-container">
            <label for="userName">Nombre de Usuario</label>
            <input type="text"  placeholder="Nombre de usuario" autocomplete="Nombre de Usuario" name="userName" >
        </div>
        <div class="input-container">
            <label for="email">Email</label>
            <input type="text"  placeholder="email" autocomplete="email" name="email" >
        </div>
        <div class="input-container">
            <label for="password">Contraseña</label>
            <input type="password"  placeholder="Introdusca la contraseña" autocomplete="Contraseña" name="password" autofocus>
        </div>

        <div id="boton-enviar-container"><input type="submit" value="Enviar"></div>
        
        <% if(datos.hasOwnProperty('errores')){ %>
            <%for(let i = 0; i < datos.errores.length; i++) {%>
                <p><%= datos.errores[i].msg%></p>
            <% } %>
        <% } %>
        
    </form>

    </main>
</body>
</html>